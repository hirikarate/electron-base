{
	"name": "electron-base",
	"version": "1.1.0",
	"description": "Provides abstract classes for main app and window for other Electron app to inherit.",
	"scripts": {
		"clean": "rimraf dist",
		"compile": "npm run clean && npm run lint && tsc --pretty",
		"dedup": "rimraf node_modules/**/node_modules/**/typings",
		"definition": "node scripts/definition.js",
		"release": "npm run compile && npm run definition",
		"lint": "tslint --fix 'src/**/*.ts'",
		"watch": "npm run clean && npm run lint && tsc --watch --pretty",
		"prepublishOnly": "npm run release"
	},
	"dependencies": {
		"electron": "~6.0",
		"shortid": "~2.2",
		"sync-exec": "~0.6",
		"tiny-cdn": "git+https://github.com/hirikarate/tiny-cdn.git",
		"winston": "~3.2",
		"winston-daily-rotate-file": "~4.1"
	},
	"peerDependencies": {
		"del": "~3.0",
		"gulp": "~3.9",
		"gulp-cached": "~1.1",
		"gulp-clean": "~0.3",
		"gulp-concat": "~2.6",
		"gulp-debug": "~3.1",
		"gulp-environments": "~0.1",
		"gulp-footer": "~1.0",
		"gulp-header": "~1.8",
		"gulp-istanbul": "~1.1",
		"gulp-mocha": "~3.0",
		"gulp-rename": "~1.2",
		"gulp-replace": "~0.6",
		"gulp-sass": "~3.1",
		"gulp-sourcemaps": "~2.6",
		"gulp-tslint": "~8.1",
		"gulp-typescript": "~3.2",
		"gulp-uglify": "~2.0",
		"gulp-uglifycss": "~1.0",
		"gulp-watch": "~4.3",
		"gulp-watch-sequence": "~1.0",
		"merge-stream": "~1.0",
		"remap-istanbul": "~0.9",
		"through2": "~2.0"
	},
	"devDependencies": {
		"@types/node": "^12",
		"@types/shortid": "^0.0.29",
		"@types/winston": "~2.4",
		"chalk": "^2.4.2",
		"fs-extra": "^8.1.0",
		"rimraf": "~2.6",
		"ts-declarator": "~1.0",
		"tslint": "~5.5",
		"typescript": "~3.6"
	},
	"publishConfig": {
		"access": "public"
	},
	"author": {
		"name": "hirikarate",
		"url": "https://github.com/hirikarate"
	},
	"engines": {
		"node": ">=12"
	},
	"license": "MIT",
	"private": false,
	"main": "./dist/index.js",
	"types": "./typings/app.d.ts",
	"repository": "git@github.com:hirikarate/electron-base.git"
}
